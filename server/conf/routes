# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                            io.fscala.shopping.controllers.Application.index

# Product API
GET           /products                                    io.fscala.shopping.controllers.Application.listProduct

# Cart API
GET           /cart/products                               io.fscala.shopping.controllers.Application.listCartProducts()
DELETE        /cart/products/:id                           io.fscala.shopping.controllers.Application.deleteCartProduct(id)
POST          /cart/products/:id/quantity/:quantity        io.fscala.shopping.controllers.Application.addCartProduct(id,quantity)
PUT           /cart/products/:id/quantity/:quantity        io.fscala.shopping.controllers.Application.updateCartProduct(id,quantity)

# Prefix must match `play.assets.urlPrefix`
GET           /assets/*file                                controllers.Assets.at(file)
GET           /versionedAssets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
